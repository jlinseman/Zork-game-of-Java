  public static  boolean finalDoor(int[]Dmg,int[]Hp,String[]items,int[]ItemDmg,int[]MonstersDmg,int[]ItemDef,int[]MonstersHp,String[]Monsters)//you may die here
  {  
    
    String input="";
    boolean reset= false;
    boolean monsterAlive = true;// the battle
    boolean playerAlive = true;
    System.out.println("This is the finall Door");
    System.out.println("There is the final boss !!!!");
    System.out.println("Mr~~~~~~~~~~~~Linseman!!!!!!!");
    
    do{
      if (MonstersHp[3]<=0)
      {
        monsterAlive = false;
      } 
      else if(Hp[0]<=0){playerAlive=false;
      }
      else{
        Hp[0]=Hp[0]-MonstersDmg[3];
        MonstersHp[3]= MonstersHp[3]-Dmg[0];
        System.out.println(Monsters[3]+" damage "+MonstersDmg[3]);
        System.out.println("Doesn't Hurt!");
        System.out.println("Your Damage "+ Dmg[0]);
        System.out.println("Your health: "+Hp[0]);
        System.out.println(Monsters[3]+" HP "+ MonstersHp[3]);
      }
    } while (playerAlive==true && monsterAlive==true);//battle ends
    if(MonstersHp[3]<=0) 
    {
      System.out.println("You win the battle!!!!");
      System.out.println("You get "+ items[5]);
      
      Dmg[0]=Dmg[0]+ItemDmg[5];
      
      System.out.println("Your current Hp: "+ Hp[0] + " Your damage: "+ Dmg[0] + " Your defence: "+ItemDef[5]);
      System.out.println("You win the game!!!");
    } 
    
    else if(Hp[0]<=0){
      
      Dmg[0]=Dmg[0]+ItemDmg[5];
      System.out.println("You died............Game Over");
      System.out.println("Items and Player Levels are saved when you play it again.");
      System.out.println("You failed the course!!!");
      System.out.println("BUT!!!!!");
      System.out.println("You received "+ items[5]);
      System.out.println(" Your damage: "+ Dmg[0] + " Your defence: "+ItemDef[5]);
      System.out.println("Enter 1 to restart other to quit.");
      input = In.getString();}
    
    if (input.equals("1"))
    {
      reset=true;
    }return reset;
    
  }
}
  
  
  
