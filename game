  public static  boolean fourthDoor(int[]Dmg,int[]Hp,String[]items,int[]ItemDmg,int[]MonstersDmg,int[]ItemDef,int[]MonstersHp,String[]Monsters)//you may die here
  {  
   
    String input="";
    boolean reset= false;
    boolean monsterAlive = true;// the battle
    boolean playerAlive = true;
    System.out.println("Fourth Door");
    System.out.println("There is a monster !!!!");
    System.out.println("Lv 2 Monster Flash Wolf");
    
    do{
      if (MonstersHp[1]<=0)
      {
        monsterAlive = false;
      } 
      else if(Hp[0]<=0){playerAlive=false;
      }
      else{
        Hp[0]=Hp[0]-MonstersDmg[1];
        MonstersHp[1]= MonstersHp[1]-Dmg[0];
        System.out.println(Monsters[1]+" damage "+MonstersDmg[1]);
        System.out.println("Doesn't Hurt!");
        System.out.println("Your Damage "+ Dmg[0]);
        System.out.println("Your health: "+Hp[0]);
        System.out.println(Monsters[1]+" HP "+ MonstersHp[1]);
      }
    } while (playerAlive==true && monsterAlive==true);//battle ends
    if(MonstersHp[1]<=0) 
    {
      System.out.println("You win the battle!!!!");
      
      
      Dmg[0]=Dmg[0]+ItemDmg[0];
      Hp[0]=Hp[0]+50;
      System.out.println("Your current Hp: "+ Hp[0] + " Your damage: "+ Dmg[0] + " Your defence: "+ItemDef[0]);
      System.out.println("Choose the door 1-3");
      input = In.getString();
      if (input.equals("1"))
      {
        if (seventhDoor(Dmg,Hp,items,ItemDmg,MonstersDmg,ItemDef,MonstersHp,Monsters)==true){reset=true;}
      }
      else if (input.equals("2"))
      {
        if ( fourthDoor(Dmg,Hp,items,ItemDmg,MonstersDmg,ItemDef,MonstersHp,Monsters)==true){reset=true;}
      }
      else if (input.equals("3"))
      {
        if ( finalDoor(Dmg,Hp,items,ItemDmg,MonstersDmg,ItemDef,MonstersHp,Monsters)==true){reset=true;}
      }
      return reset;  }
    
    
    else if(Hp[0]<=0){
      
      
      System.out.println("You died............Game Over");
      System.out.println("Items and Player Levels are saved when you play it again.");
      System.out.println("Enter 1 to restart other to quit.");
      input = In.getString();}
    
    if (input.equals("1"))
    {
      reset=true;
    }return reset;
    
  }
  
  
  public static boolean fifthDoor(int[]Dmg,int[]Hp,String[]items,int[]ItemDmg,int[]MonstersDmg,int[]ItemDef,int[]MonstersHp,String[]Monsters)//you may die here
  {  
   
    String input="";
    boolean reset= false;
