    Lv2DmgItem0=Dmg[1]+ItemDmg[0];
    Hp[0]=Hp[0]+20;
    System.out.println("Your current Hp: "+ Hp[0] + " Your damage: "+ Lv2DmgItem0 + " Your defence: "+ItemDef[0]);
